// For format details, see https://aka.ms/devcontainer.json. For config options, see the
// README at: https://github.com/devcontainers/templates/tree/main/src/debian
{
	"name": "DevContainer",
	// Or use a Dockerfile or Docker Compose file. More info: https://containers.dev/guide/dockerfile
	"build": {
		"dockerfile": "Dockerfile"
	},
	"remoteEnv": {
		"PATH": "${containerEnv:PATH}:/home/vscode/.ghcup/bin:/home/vscode/.cabal/bin:/home/vscode/.go/bin:/home/vscode/.local/share/mise/installs/ghcup/latest"
	},
	"customizations": {
		"vscode": {
			"extensions": [
				"haskell.haskell",
				"Gruntfuggly.todo-tree"
			],
			"settings": {
				"haskell.manageHLS": "GHCup",
				"haskell.ghcupExecutablePath": "/home/vscode/.local/share/mise/installs/ghcup/latest/ghcup"
			}
		}
	}
	// "postCreateCommand": "sh .devcontainer/post-create.sh"
}